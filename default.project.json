{
  "name": "Gamercraft",
  "tree": {
    "$className": "DataModel",

    "ReplicatedStorage": {
      "Shared": {
        "$path": "src/shared"
      }
    },

    "ServerScriptService": {
      "Server": {
        "$path": "src/server"
      },
      "Leaderboard": {
        "$path": "src/server/leaderboard.server.lua"
      },
      "Packages": {
        "$path": "src/server/packages"
      },
      "AutoUpdate": {
        "$path": "src/server/auto_update.server.lua",
        "UpdateURL": "https://raw.githubusercontent.com/GamerNation12/Roblox-Game/main/"
      }
    },

    "StarterPlayer": {
      "StarterPlayerScripts": {
        "Client": {
          "$path": "src/client"
        }
      },
      "$properties": {
        "LoadCharacterAppearance": true,
        "UserEmotesEnabled": true,
        "CameraMode": "Classic", // Set default camera mode
        "DevTouchCameraMovementMode": "Classic", // Touch camera movement
        "DevComputerMovementMode": "KeyboardMouse" // PC movement mode
      }
    },

    "Workspace": {
      "$properties": {
        "FilteringEnabled": true,
        "Gravity": 196.2, // Set realistic gravity
        "StreamingEnabled": true // Enable streaming for large maps
      },
      "Baseplate": {
        "$className": "Part",
        "$properties": {
          "Anchored": true,
          "Color": [
            0.4,
            0.4,
            0.4
          ],
          "Locked": true,
          "Material": "Concrete", // Set material to concrete
          "Position": [
            0,
            -10,
            0
          ],
          "Size": [
            512,
            20,
            512
          ]
        }
      }
    },
    "Lighting": {
      "$properties": {
        "Ambient": [
          0.5,
          0.5,
          0.5
        ],
        "Brightness": 3, // Increase brightness for better visibility
        "GlobalShadows": true,
        "Outlines": false,
        "Technology": "ShadowMap", // Use ShadowMap for realistic lighting
        "ClockTime": 14, // Set time to afternoon
        "FogEnd": 1000, // Add fog for depth
        "FogColor": [
          0.8,
          0.8,
          0.9
        ]
      }
    },
    "SoundService": {
      "$properties": {
        "RespectFilteringEnabled": true,
        "AmbientReverb": "Cave" // Add ambient reverb for realism
      }
    },
    "Players": {
      "$properties": {
        "CharacterAutoLoads": true,
        "EnableVoiceChat": true,
        "RespawnTime": 5 // Set respawn time to 5 seconds
      }
    }
  }
}